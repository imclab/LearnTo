= form_for @post, :url => {:controller => "posts", :action => "create" } do |f|
  = hidden_field_tag("forum_id", @forum.id)
  = label_tag(:title, "Title:")
  %br
    = f.text_field :title
    %br
      = label_tag(:content, "Post Content:")
      %br
        = f.text_area :content, :size => "60x12"
        %br
          = label_tag(:tag_list, "Tags:")
          %br
            = f.text_field :tag_list, :size => 30
          = f.submit "Create"