.subcomment
  #{subcomment.content} - #{link_to subcomment.user.login, user_path(subcomment.user)}
  %small
    &nbsp;
    #{time_ago_in_words subcomment.created_at} ago
    - if subcomment.user_id == current_user.id
      = link_to "delete", class_room_forum_post_comment_subcomment_path(@class_room, @forum, @post, comment, subcomment), :method => :delete
