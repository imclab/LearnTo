= form_for(@user) do |f|
  - if @user.errors.any?
    #error_explanation.ui-state-error.ui-corner-all
      .ui-icon.ui-icon-alert.icon-in-info
      %h2= "Could not register: #{pluralize(@user.errors.count, "error")} in the form"
      %ul
      - @user.errors.full_messages.each do |msg|
        %li= msg
  .field
    = f.label :login, "Display Name", :class => "main"
    %p.hint We recommend that users enter their real name to foster an honest community.
    = f.text_field :login, :class => "text"
  .field
    = f.label :biography, :class => "main"
    %p.hint Enter a quick biography here to tell other users about your previous academic experiences.
    = f.text_area :biography, :style => "font-family: sans-serif;",  :size => "80x10"
      
  .actions
    = f.submit "Update Account"  
    = link_to "Cancel", user_path(@user)
