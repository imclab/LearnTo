= form_for @new_announcement, :url => {:controller => "announcements", :action => "create" } do |f|
  = hidden_field_tag("class_room_id", @class_room.id)
  = label_tag(:title, "Title:")
  %br
  = f.text_field :title
  %br
  = label_tag(:content, "Post Content:")
  %br
  = f.text_area :content, :size => "60x12"
  %br
  = f.submit "Create"
