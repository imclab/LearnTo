    <%= f.label :caption %><br />
    <%= f.text_field :caption %>
  </div>
  <div class="field">
    <%= f.label :type %><br />
	<%= Resource::TYPES.map { |type| (f.radio_button :file_type, type) + (label_tag type) }.join.html_safe %>
  </div>  
  <div class="field">
    <%= f.label :url %><br />
    <%= f.text_field :url %>
  </div>
  <div class="field">
    <%= f.label :file %><br />
    <%= f.file_field :file %>
  </div>
  <div class="actions">
    <%= f.submit "Post" %>
  </div>
<% end %>
