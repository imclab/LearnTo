= form_for @post, :url => [@class_room, @forum, @post] do |f|
  = label_tag(:title, "Title:")
  = f.text_field :title
  = label_tag(:content, "Post Content:")
  = f.text_area :content, :size => "60x12"
  = label_tag(:new_tags, "Tags:")
  = text_field_tag :new_tags
  %div
    = f.submit "Submit Post"
