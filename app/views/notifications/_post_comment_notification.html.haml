.notification{ :class => (read ? "read" : "unread")}
  - if count.to_i == 1
    = link_to post_comment.user.login + " responded to your post \"#{post_comment.post.title}\" in " + post_comment.post.forum.class_room.name + ".", class_room_forum_post_path(post_comment.post.forum.class_room, post_comment.post.forum, post_comment.post), :class => "notification_url"
  - else
    - if read
      = link_to "#{count} responses to your post \"#{post_comment.post.title}\" in " + post_comment.post.forum.class_room.name + ".", class_room_forum_post_path(post_comment.post.forum.class_room, post_comment.post.forum, post_comment.post), :class => "notification_url"
    - else
      = link_to "#{count} new responses to your post \"#{post_comment.post.title}\" in " + post_comment.post.forum.class_room.name + ".", class_room_forum_post_path(post_comment.post.forum.class_room, post_comment.post.forum, post_comment.post), :class => "notification_url"
      