.form_page
  %h1  Editing #{@resource_page.section.singularize}
  %p.hint Located at: #{@section.title} #{">"} #{@resource.name} 

  %hr

  - if @resource.file_type == "document"
    = render 'edit_form'
    = link_to "put embedded resource", class_room_resource_page_section_resource_doc_rec_path(@class_room, @resource_page, @section, @resource, @document), :method => 'post'
  - else
    = render 'form',
          :locals => { :resource => @resource, :resource_page => @resource_page, :section => @section, 
          :class_room => @class_room, :sections => @sections,
          :style => "small_resource_form" }
